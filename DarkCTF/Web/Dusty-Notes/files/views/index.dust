<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Dusty Notes</title>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp'>
<link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Quicksand:wght@500&amp;display=swap'>
<link rel="stylesheet" href="css/main.css">
<link rel="stylesheet" href="css/style.css">

</head>
<body>

<div style="width:50%; margin:0 auto;display: flex;justify-content: center">
<form action="/addNotes?">
    <input class="input" name="message" type="search" name="note" required>
    <input class="submit" type="submit" value="Add task" >
</form>
</div>

<div class="cont">
    {#note}
    {@if cond="'{body}' != ''"}
  		<div class="card card-draggable orange">
            <div class="nav">
              <i class="material-icons-round">
                palette
              </i>
              <form action='/deleteNote/{id}' method="POST">
              <button class="material-icons-round">
                close
              </button>
              </form>
            </div>
            <div class="text">
              <textarea disabled class="textarea-auto">{body}</textarea>
            </div>
          </div>
          {:else}
          <script>console.log("null provided");</script>
          {/if}
	{/note}
        
</div>

</body>
</html>
